<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/floatingActionButtonBackground</item>
        <item name="android:windowLightStatusBar">true</item>
<!--        <item name="android:actionMenuTextColor">@color/white</item>-->
<!--        <item name="android:actionBarItemBackground">@color/white</item>-->
    </style>
    <style name="PredictResultTextStyle">
        <item name="android:textSize">@dimen/predict_result_text_size</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">@dimen/predict_result_textview_margin</item>
    </style>
    <style name="HomeFilterCheckbox">
        <item name="android:background">@drawable/shape_checkbox_cornors</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="HomeFilterType">
        <item name="android:layout_margin">@dimen/universal_margin_left_right_short</item>
        <item name="android:textSize">@dimen/home_filter_type_title_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>