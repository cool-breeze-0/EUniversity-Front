<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/userCommonProblemItemTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/universal_margin_left_right_short"
            android:layout_marginStart="@dimen/universal_margin_left_right"
            android:layout_marginBottom="@dimen/universal_margin_left_right_short"
            android:layout_centerVertical="true"
            android:textSize="@dimen/user_widget_text_size" />

        <ImageView
            android:id="@+id/userItemIcon"
            android:layout_width="22dp"
            android:layout_height="@dimen/user_item_icon_size"
            android:layout_marginTop="@dimen/universal_margin_left_right_short"
            android:layout_marginEnd="@dimen/universal_margin_left_right_short"
            android:layout_marginBottom="@dimen/universal_margin_left_right_short"
            android:tint="@color/userItemIcon"
            android:layout_centerInParent="true"
            android:layout_alignParentEnd="true"
            app:srcCompat="@drawable/icon_arrow_right" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>