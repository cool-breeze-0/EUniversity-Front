<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <ImageView
            android:id="@+id/userItemImage"
            android:layout_width="@dimen/user_item_image_size"
            android:layout_height="@dimen/user_item_image_size"
            android:layout_marginStart="@dimen/user_item_margin"
            android:layout_marginTop="@dimen/user_item_margin"
            android:layout_marginEnd="@dimen/user_item_margin"
            android:layout_marginBottom="@dimen/user_item_margin"
            app:srcCompat="@drawable/ic_launcher_background" />

        <TextView
            android:id="@+id/userItemText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/userItemImage"
            android:text="TextView"
            android:layout_centerVertical="true"
            android:textSize="@dimen/user_widget_text_size" />

        <ImageView
            android:id="@+id/userItemIcon"
            android:layout_width="22dp"
            android:layout_height="@dimen/user_item_icon_size"
            android:layout_marginTop="@dimen/user_item_margin"
            android:layout_marginEnd="@dimen/user_item_margin"
            android:layout_marginBottom="@dimen/user_item_margin"
            android:tint="@color/userItemIcon"
            android:layout_centerInParent="true"
            android:layout_alignParentEnd="true"
            app:srcCompat="@drawable/icon_arrow_right" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>